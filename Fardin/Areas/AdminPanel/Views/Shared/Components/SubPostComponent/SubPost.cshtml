@using Fardin.Core.DTO
@model SubPostEditViewModel
@{
    List<SubPostViewModel> SubPostModel = ViewBag.Model as List<SubPostViewModel>;
 }
    <div class="row mx-0 mb-5 postSection">
        <div class="col-xl-10 col-lg-9 col-md-8 mr-auto">
            <form asp-action="SubPosts" enctype="multipart/form-data">
                <div class="row align-items-center">
                    <!-- salary table -->
                    <div class="col-xl-6 col-12 mb-4 mb-xl-0 align-items-center">
                        <input type="hidden" id="detailId" asp-for="@Model.SubPostId" />
                        <h3 class="text-muted text-center mb-3">اضافه کردن پیوند به یک پست</h3>
                        <div>
                            <label>لطفا پست مورد نظر را انتخاب کنید</label>
                            <select id="PostId" name="PostId" class="form-control">
                                <option value="0">انتخاب...</option>
                                @foreach (var post in SubPostModel)
                                {

                                    <option value="@post.PostId">@((post.Title != null ? post.Title.Substring(0,post.Title.Length) : "متنی یافت نشد"))</option>

                                }
                            </select>
                        </div>
                        <div id="SubPostsDection" style="display: none">
                            <label>لطفا زیرپست مورد نظر را انتخاب کنید</label>
                            <select id="SubPosts" class="form-control">
                                <option value="0">انتخاب...</option>
                            </select>
                        </div>
                        <div id="detailsOfSubPosts" style="display: none">
                            <label>تیتر مورد نظر را وارد کنید</label>
                            <input type="text" id="SubPostsText" asp-for="@Model.Title" class="form-control" />
                            <label>متن مورد نظر را وارد کنید</label>
                            <textarea id="TextResumen" asp-for="@Model.Text" rows="5" class="form-control"></textarea>
                            <label>لطفا زبان مورد نظر را انتخاب کنید</label>
                            <select id="lang" name="lang" class="form-control">
                                <option value="0">انتخاب...</option>
                                <option value="fa-IR">فارسی</option>
                                <option value="en-US">انگلیسی</option>
                            </select>
                        </div>
                        
                    </div>
                    <!-- end of salary table -->
                    <!-- payments table -->
                    <div class="col-xl-6 col-12">
                        <h3 class="text-muted text-center mb-3">انتخاب تصویر پست</h3>

                        <div>
                            <img src="~/images/no.image.png" id="imgUp2" height="250" />
                        </div>

                        <input type="file" asp-for="@Model.Image" id="image" />

                        <hr /><br />
                        <h3>انتخاب گالری تصاویر</h3>
                        <div>
                            <input type="file" name="imageGallery" id="image-gallery" multiple />
                        </div>

                    </div>
                    <!-- end of payments table -->
                </div>
                <br />
                <input type="submit" value="ثبت" class="btn btn-success" />
            </form>
        </div>
    </div>
