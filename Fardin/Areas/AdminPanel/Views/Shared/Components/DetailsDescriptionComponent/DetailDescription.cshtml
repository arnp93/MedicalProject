@model IEnumerable<Fardin.DataLayer.Entites.PostDetail>

<div class="row mx-0 mb-5 postSection">
    <div class="col-xl-10 col-lg-9 col-md-8 mr-auto">
        <form asp-action="detailOfPost" enctype="multipart/form-data">
            <div class="row align-items-center">
                <!-- salary table -->
                <div class="col-xl-6 col-12 mb-4 mb-xl-0 align-items-center">

                    <h3 class="text-muted text-center mb-3">متن پست</h3>

                    <label>لطفا بخش مورد نظر را انتخاب کنید</label>
                    <div>
                        <select name="postDetailId" class="form-control">
                            <option value="0">انتخاب...</option>
                            @foreach (var postDetail in Model)
                            {

                                <option value="@postDetail.PostDetailId">@((postDetail.Title != null ? postDetail.Title.Substring(0, postDetail.Title.Length) : "متنی یافت نشد"))</option>

                            }
                        </select>
                    </div>
                    <textarea name="DetailText" class="form-control" rows="10"></textarea>


                </div>
                <!-- end of salary table -->
                <!-- payments table -->
                <div class="col-xl-6 col-12">
                    <h3 class="text-muted text-center mb-3">انتخاب تصویر </h3>

                    <div>
                        <img src="~/images/no.image.png" id="imgUp3" height="250" />
                    </div>

                    <input type="file" name="image" id="descriptionDetailImage" />

                </div>
                <!-- end of payments table -->
            </div>
            <br />
            <input type="submit" value="ثبت" class="btn btn-success" />
        </form>
    </div>
</div>