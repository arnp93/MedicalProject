@model Fardin.DataLayer.Entites.About
@{
    ViewData["Title"] = "About";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

<div class="row">

    <div class="col-12" id="about" style="text-align:justify;margin-top: 200px;margin-left: 30px;margin-right:30px;padding: 50px;text-justify: inter-word;background-color: white ">
        @if (Model != null && Model.Text == null)
        {
            @: There is no Contents
        }
        else
        {
            @Model.Text
        }
    </div>

</div>
<div class="copyrights" style="bottom: 0;position: absolute">
