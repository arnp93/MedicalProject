@model IEnumerable<Fardin.DataLayer.Entites.SubPost>
@{
    ViewData["Title"] = "View Descriptions";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}
<br />
<br />
<br />
@if (Model != null && Model.Count() > 1)
{
    <div class="container-fluid">
        <div class="row dev-list text-center" style="margin-top:150px;margin-bottom: 100px">
            @foreach (var detail in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.2s" style="visibility: visible; animation-duration: 1s; animation-delay: 0.2s; animation-name: fadeIn;">
                    <a href="/detailDescription/@detail.SubPostId">
                        <div class="widget clearfix">
                            <div class="hover-br" style="box-shadow: 2px 2px 10px 2px black">
                                @if (detail.ImageName != null)
                                {
                                    <img src="~/posts/SubPostsImage/@detail.ImageName" class="img-responsive" alt="" />
                                }
                                else
                                {
                                    <img class="img-responsive" src="~/images/no.image.png" alt="" />
                                }
                            </div>
                            <br />
                            <div class="widget-title">
                                <h3>@detail.Title</h3>
                            </div>
                            <!-- end title -->
                            <p>@detail.TextResumen</p>


                        </div><!--widget -->
                    </a>
                </div><!-- end col -->
            }


        </div><!-- end row -->
    </div>
}
else if (Model != null && Model.Count() == 1)
{
    
    <section id="content" class="content">

        <div class="container">
            <div class="about-content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="single-about-txt">
                            <h3>
                                @Model.FirstOrDefault().Title
                            </h3>
                            <p>
                                @Model.FirstOrDefault().TextResumen;
                            </p>
                        </div>
                    </div>
                    <div class="col-sm-offset-1 col-sm-5">
                        <div class="single-about-img">
                            @if (Model.FirstOrDefault().ImageName != null)
                            {
                                <img src="~/posts/SubPostsImage/@Model.FirstOrDefault().ImageName" alt="Alternate Text" style="width:80%" />
                            }
                            else
                            {
                                <img src="~/images/no.image.png" alt="" style="width:80%" />
                            }

                        </div>

                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:70px">
                
                @if (Model.FirstOrDefault().Images != null)
                {
                    <!--Image Gallery-->
                    <div id="image-gallery" >
                        <div class="container">
                            <div id="myCarousel" class="carousel slide" data-ride="carousel" style="box-shadow: 10px 10px 20px black">
                               

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner">

                                    @foreach (var image in Model.FirstOrDefault().Images.Split(","))
                                    {
                                        <div class="item">
                                            <img src="/posts/postImageGallery/@image" alt="">
                                        </div>
                                    }

                                </div>

                                <!-- Left and right controls -->
                                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>




                    </div>
                }
                </div>
        </div>
    </section>
    <div class="copyrights">
        <div class="container-fluid">
            <div class="footer-distributed">
                <div class="footer-left">
                    <p class="footer-links">
                        <a href="#">Home</a>
                        <a href="#">Blog</a>
                        <a href="#">Pricing</a>
                        <a href="#">About</a>
                        <a href="#">Faq</a>
                        <a href="#">Contact</a>
                    </p>
                    <p class="footer-company-name">All Rights Reserved. &copy; 2020 | Design By : <a href="#">ARASH NP</a></p>
                </div>

                <div class="footer-right">
                    <form method="get" action="#">
                        <input placeholder="Subscribe our newsletter.." name="search">
                        <i class="fa fa-envelope-o"></i>
                    </form>
                </div>
            </div>
        </div><!-- end container -->
    </div>
}
else
{
    <div class="container">
        <div class="row" style="margin-top: 200px">
            <h2>There is no content</h2>
        </div>
    </div>
}
