@model Fardin.DataLayer.Entites.SubPostDescription
@{
    ViewData["Title"] = "Description";
    Layout = "~/Views/Shared/_mainLayout.cshtml";
}

@if (Model != null)
{


    <section id="content" class="content">

        <div class="container">
            <div class="about-content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="single-about-txt">
                            <h3>
                                @Model.SubPost.Title
                            </h3>
                            <p>
                                @Model.Text.ToString()
                            </p>
                        </div>
                    </div>
                    <div class="col-sm-offset-1 col-sm-5">
                        <div class="single-about-img">
                            @if (Model.imageName != null)
                            {
                            <img src="~/posts/SubPostsImage/@Model.imageName" alt="Alternate Text" style="width: 100%" />
                            }
                            else
                            {
                                <img src="~/images/no.image.png" alt="" style="width:100%" />
                            }

                        </div>

                    </div>
                </div>
            </div>
            <div class="row">

                <!--Image Gallery-->
                @if (Model.Images != null)
                {
                <div id="image-gallery">
                    
                    <div class="container">
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                @for (int i = 0; i < Model.Images.Split(",").Length; i++)
                                {
                                    <li data-target="#myCarousel" data-slide-to="i"></li>
                                }
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                @foreach (var image in Model.Images)
                                {
                                    <div class="item">
                                        <img src="/posts/postImageGallery/@image" alt="">
                                    </div>
                                }


                            </div>

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>




                </div>
                }
            </div>
        </div>
    </section>
    <div class="copyrights">
        <div class="container-fluid">
            <div class="footer-distributed">
                <div class="footer-left">
                    <p class="footer-links">
                        <a href="#">Home</a>
                        <a href="#">Blog</a>
                        <a href="#">Pricing</a>
                        <a href="#">About</a>
                        <a href="#">Faq</a>
                        <a href="#">Contact</a>
                    </p>
                    <p class="footer-company-name">All Rights Reserved. &copy; 2020 | Design By : <a href="#">ARASH NP</a></p>
                </div>

                <div class="footer-right">
                    <form method="get" action="#">
                        <input placeholder="Subscribe our newsletter.." name="search">
                        <i class="fa fa-envelope-o"></i>
                    </form>
                </div>
            </div>
        </div><!-- end container -->
    </div>

}
else
{
    <div class="container">
        <div class="row" style="margin-top: 200px">
            <h2>¡Lo siento! No hay ningun texto!</h2>
        </div>
    </div>
}
